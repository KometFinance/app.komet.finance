{
  "name": "app.komet.finance",
  "version": "1.0.0",
  "description": "the actual app for komet.finance",
  "main": "src/index.html",
  "scripts": {
    "start": "parcel src/index.html",
    "start:old": "parcel src/screen.html -p 12345",
    "build": "npx parcel build src/index.html --public-url=\"./\"",
    "build:prod": "NODE_ENV=production npm run css:build && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/*.ts",
    "lint:fix": "prettier --write src/ && eslint src/*.ts --fix",
    "css:build": "npx tailwindcss build src/tailwind.css -o src/tailwind-build.css",
    "css:watch": "nodemon -e js,css --watch src/tailwind.css --watch tailwindcss.config.js --exec \"npm run css:build\""
  },
  "keywords": [
    "elm",
    "ethereum",
    "parcel"
  ],
  "author": "Komet.Finance",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/cli": "^7.12.7",
    "@babel/core": "^7.12.7",
    "@babel/preset-env": "^7.12.7",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "elm-hot": "^1.1.5",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "parcel-bundler": "^1.12.4",
    "prettier": "2.2.0",
    "sass": "^1.29.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@metamask/detect-provider": "^1.2.0",
    "@webcomponents/custom-elements": "^1.4.3",
    "@webcomponents/webcomponentsjs": "^2.5.0",
    "babel-polyfill": "^6.26.0",
    "bootstrap": "^4.5.3",
    "cssnano": "^4.1.10",
    "elm": "^0.19.1-3",
    "ethavatar": "^1.0.0-beta.11",
    "jquery": "^3.5.1",
    "node-elm-compiler": "^5.0.5",
    "nodemon": "^2.0.6",
    "popper.js": "^1.16.1",
    "scss": "^0.2.4",
    "tailwindcss": "1.9.6",
    "web3": "^1.3.0",
    "web3-core": "^1.3.0",
    "web3-utils": "^1.3.0"
  }
}
